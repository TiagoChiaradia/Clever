<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Inventário - Editar itens</title>
  <!-- fontes do google -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap" rel="stylesheet">
  <!-- css e js links-->
  <script src="https://kit.fontawesome.com/cb4069a99b.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <link rel="icon" href="images\favicon.ico">

</head>

<body class="paginaInicial">
  <!-- Seção cabeçalho que é utilizada em todas as telas internas do site-->
  <div class=containerTela>
    <!--barra de menu superior></!-->
    <div class="topnav">
      <span class="bemVindo">Inventário - Editar itens</span>
      <a href="/paginaPrincipal"> <i class="fas fa-house-user"> </i> Página Inicial</a>
      <div class="topnav-right">
        <a href="/"><i class="fas fa-sign-out-alt"></i> Sair</a>
      </div>
    </div>

    <!--barra de menu lateral></!-->

    <div class="barraLateral">
      <div class="vertical-menu">
        <br>
        <a href="/relatorios">Relatórios</a>
        <button class="dropdown-btn">Ordens de serviço
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/criarOrdens">Criar ordens de serviço</a>
          <a href="/pesquisarOrdensServico">Consultar e editar ordens de serviço</a>
        </div>
        <button class="dropdown-btn">Ordens preventivas
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/ordemPreventivaCriar">Criar ordem preventiva</a>
          <a href="/consultarPreventivas">Consultar e editar ordens preventivas</a>
        </div>
        <button class="dropdown-btn">Máquinas
          <i class="fa fa-caret-down"></i>

        </button>
        <div class="dropdown-container">
          <a href="/cadastrarMaquinas">Cadastrar máquinas</a>
          <a href="/consultarMaquinas">Consultar e editar máquinas</a>
          <a href="/excluirMaquinas">Excluir máquinas</a>
          <a href="/processoMaquinas">Dados de processo</a>
        </div>
        <button class="dropdown-btn">Usuários
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/cadastrarUsuarioInternal">Cadastrar usuários</a>
          <a href="/consultarEditarUsuarios">Consultar e editar usuários</a>
        </div>
        <button class="dropdown-btn">Inventário
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/inventario">Cadastrar Itens</a>
          <a href="/consultarEditarItensInventario">Consultar e editar Itens</a>
        </div>
        <a href="/contato">Contate-nos!</a>
      </div>
    </div>

    <script>
      /* função para ativar os botões da barra lateral, dropdownbtn*/
      var dropdown = document.getElementsByClassName("dropdown-btn");
      var i;
      for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var dropdownContent = this.nextElementSibling;
          if (dropdownContent.style.display === "block") {
            dropdownContent.style.display = "none";
          } else {
            dropdownContent.style.display = "block";
          }
        });
      }
    </script>


    <div class="conteudo">
      <div class="conteudoEsquerdoInventario">

        <form id="itemForm" action="/editarItemSelecionado" method="post">
            <% listaDeItens.forEach(function(item) { %>
          <div class="mb-3">
            <label for="idItem" class="form-label">ID Item</label>
            <input type="text" class="form-control" name="idItem" id="idItem" maxlength="50" value = "<%= item.idItem %>">
            <div id="IdItemHelp" class="form-text">ID do item.</div>
          </div>

          <div class="mb-3">
            <div class="form-group">
              <label for="descricaoItem" class="form-label">Descrição do item</label>
              <textarea class="form-control" id="descricaoItem" name="descricaoItem" rows="3" maxlength="100" ><%= item.descricaoItem %></textarea>
              <div id="descricaoitemHelp" class="form-text">Insira uma breve descrição do item cadastrado.</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="maquinaItem" class="form-label">Máquina</label>
            <input type="text" class="form-control" id="maquinaItem" name="maquinaItem" aria-describedby="nomeHelp" value = "<%= item.maquinaItem %>">
            <div id="maquinaItemHelp" class="form-text">Insira a identificação da máquina em que o item é utilizado.</div>
          </div>

          <div class="mb-3">
            <label for="vendedorItem" class="form-label">Vendedor</label>
            <input type="text" class="form-control" id="vendedorItem" name = "vendedorItem" maxlength="100" value = "<%= item.vendedorItem %>">
            <div id="vendedorItemHelp" class="form-text">Insira o nome da empresa ou do vendedor do item.</div>
          </div>

          <button type="button" class="btn btn-primary" onclick="validaCamposDigitados()" ><i class="fas fa-save" ></i> Salvar</button>
          <button type="button" class="btn btn-primary" onclick="cancelar()"><i class="fas fa-eraser"></i> Limpar</button>
          <a href="/paginaPrincipal" class="btn btn-primary"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>


      </div>
      <div class="conteudoDireitoInventario">


          <div class="mb-3">
            <label for="marcaItem" class="form-label">Marca</label>
            <input type="text" class="form-control" id="marcaItem" name = "marcaItem" value = "<%= item.marcaItem %>">
            <div id="marcaItemHelp" class="form-text">Insira a marca do item.</div>
          </div>

          <div class="mb-3">
            <label for="modeloItem" class="form-label">Modelo</label>
            <input type="text" class="form-control" id="modeloItem" name="modeloItem" value = "<%= item.modeloItem %>">
            <div id="modeloItemHelp" class="form-text">Insira o modelo do item.</div>
          </div>
          <br>
          <br>
          <div class="mb-3">
            <label for="quantidadeAtualItem" class="form-label">Quantidade</label>
            <input type="number" class="form-control" name="quantidadeAtualItem" id="quantidadeAtualItem" aria-describedby="quantidadeAtualHelp" value = "<%= item.quantidadeAtualItem %>">
            <div id="quantidadeAtualItem" class="form-text">Insira a quantidade atual do item que está sendo atualizado.</div>
          </div>

          <div class="mb-3">
            <label for="quantidadeMinimaItem" class="form-label">Quantidade Mínima</label>
            <input type="number" class="form-control" name = "quantidadeMinimaItem" id="quantidadeMinimaItem" aria-describedby="QuantidadeMinimaHelp" value = "<%= item.quantidadeMinimaItem %>">
            <div id="quantidadeMinimaItem" class="form-text">Insira a quantidade mínima do item que está sendo atualizado.</div>
          </div>
          <%  }); %>
        </form>

      </div>
    </div>

  </div>

  <script src="JS/inventarioFuncoes.js" type="text/javascript"></script>
</body>

</html>
