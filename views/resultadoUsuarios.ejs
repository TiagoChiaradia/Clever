<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Resultado usuários</title>
  <!-- fontes do google -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap" rel="stylesheet">
  <!-- css e js links-->
  <script src="https://kit.fontawesome.com/cb4069a99b.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <link rel="icon" href="images\favicon.ico">

</head>

<body class="paginaInicial">
  <!-- Seção cabeçalho que é utilizada em todas as telas internas do site-->
  <div class=containerTela>
    <!--barra de menu superior></!-->
    <div class="topnav">
      <span class="bemVindo">Resultado da pesquisa de usuários</span>
      <a href="/paginaPrincipal"> <i class="fas fa-house-user"> </i> Página Inicial</a>
      <div class="topnav-right">
        <a href="/"><i class="fas fa-sign-out-alt"></i> Sair</a>
      </div>
    </div>

    <!--barra de menu lateral></!-->

    <div class="barraLateral">
      <div class="vertical-menu">
        <br>
        <a href="/relatorios">Relatórios</a>
        <button class="dropdown-btn">Ordens de serviço
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/criarOrdens">Criar ordens de serviço</a>
          <a href="/pesquisarOrdensServico">Consultar e editar ordens de serviço</a>
        </div>
        <button class="dropdown-btn">Ordens preventivas
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/ordemPreventivaCriar">Criar ordem preventiva</a>
          <a href="/consultarPreventivas">Consultar e editar ordens preventivas</a>
        </div>
        <button class="dropdown-btn">Máquinas
          <i class="fa fa-caret-down"></i>

        </button>
        <div class="dropdown-container">
          <a href="/cadastrarMaquinas">Cadastrar máquinas</a>
          <a href="/consultarMaquinas">Consultar e editar máquinas</a>
          <a href="/excluirMaquinas">Excluir máquinas</a>
          <a href="/processoMaquinas">Dados de processo</a>
        </div>
        <button class="dropdown-btn">Usuários
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/cadastrarUsuarioInternal">Cadastrar usuários</a>
          <a href="/consultarEditarUsuarios">Consultar e editar usuários</a>
        </div>
        <button class="dropdown-btn">Inventário
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/inventario">Cadastrar Itens</a>
          <a href="/consultarEditarItensInventario">Consultar e editar Itens</a>
        </div>
        <a href="/contato">Contate-nos!</a>
      </div>
    </div>

    <script>
      /* função para ativar os botões da barra lateral, dropdownbtn*/
      var dropdown = document.getElementsByClassName("dropdown-btn");
      var i;
      for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var dropdownContent = this.nextElementSibling;
          if (dropdownContent.style.display === "block") {
            dropdownContent.style.display = "none";
          } else {
            dropdownContent.style.display = "block";
          }
        });
      }
    </script>


    <div class="conteudo">
      <div class="conteudoEsquerdoUsuario">

        <form action="/resultadoUsuarios" method="post">

          <p class="usuariosCabecalho">Editar usuário:</p>
          <div class="input-group rounded">
            <input type="text" name="loginProcurado" class="form-control rounded" placeholder="Insira o login do usuário para poder atualizar os dados" aria-label="Nome de usuário" aria-describedby="search-addon" id="procurarNomeUsuario" required />
            <span class="input-group-text border-0">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <br>
          <div class="input-group rounded">
            <input type="text" name="nomeUsuarioProcurado" class="form-control rounded" placeholder="Nome completo do usuário" aria-label="Nome completo do usuário" aria-describedby="search-addon" id="procurarNomeCompleto" />
            <span class="input-group-text border-0">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <br>
          <div class="input-group rounded">
            <input type="search" name="emailprocurado" class="form-control rounded" placeholder="E-mail" aria-label="E-mail" aria-describedby="search-addon" id="procurarEmail" />
            <span class="input-group-text border-0">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <br>

          <div class="input-group rounded">
            <input type="password" name="novaSenhaUser" class="form-control rounded" placeholder="Nova senha" aria-label="E-mail" aria-describedby="search-addon" id="novaSenhaUser" />
            <span class="input-group-text border-0">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <br>

          <div class="input-group rounded">
            <input type="password" name="confimacaoNovaSenhaUser" class="form-control rounded" placeholder="Confirmação de senha" aria-label="E-mail" aria-describedby="search-addon" id="confimacaoNovaSenhaUser" />
            <span class="input-group-text border-0">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <br>

          <div class="mb-3">
            <label class="form-label">Tipo de usuário: </label>
          </div>
          <table style="table-layout: fixed; width: 100%;">
            <tr>
              <td style="width:25%;">
                <div class="form-check">
                  <input class="form-check-input" type="radio" value="Administrador" name="flexRadioDefault" id="tipoAdministrador">
                  <label class="form-check-label" for="tipoAdministrador">
                    Administrador
                  </label>
                </div>

              </td>
              <td style="width:25%;">
                <div class="form-check">
                  <input class="form-check-input" type="radio" value="Tecnico" name="flexRadioDefault" id="tipoTecnico">
                  <label class="form-check-label" for="tipoTecnico">
                    Técnico
                  </label>
                </div>
              </td>
              <td style="width:25%;">
                <div class="form-check">
                  <input class="form-check-input" type="radio" value="Usuario" name="flexRadioDefault" id="tipoUsuario">
                  <label class="form-check-label" for="tipoUsuario">
                    Usuário
                  </label>
                </div>
              </td>
            </tr>
          </table>


          <div class="btn-usuario">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
            <button type="button" class="btn btn-primary" onclick="limparTodosCampos()"><i class="fas fa-eraser"></i> Limpar</button>
          </div>

      </div>
      </form>

      <div class="conteudoDireitoUsuario">
        <div class="resultadoUsuarios">

          <form action="/deleteUser" method="post">
            <div class="form-group">
              <p class="usuariosCabecalho">Lista de usuários encontrados:</p>

              <label for="resultadoItens" class="form-label">Resultado da pesquisa:</label>
              <select multiple class="form-control" id="resultadoItens" onchange="editar(this)" name="listaUsuariosSelect">
                <% listaDeUsuarios.forEach(function(user) { %>

                <option value="<%= user.login %>"><%= "Login: "+  user.login + ", " + user.email + ", "+user.nomeCompleto + ", "+ user.tipoUsuario %></option>

                <%  }); %>
              </select>
              <div id="pesquisaUsuariosHelp" class="form-text">Selecione o usuário que deseja excluir</div>
              <br>
              <br>

            </div>
        </div>

        <div class="btn-usuarioDireito">

          <a href="consultarEditarUsuarios" class="btn btn-primary"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>
          <button type="submit" class="btn btn-primary"><i class="fas fa-trash-alt"></i> Excluir</button>
          </form>
        </div>
      </div>

    </div>
  </div>
  </div>


  <script src="JS/usuariosFuncoes.js" type="text/javascript"></script>

</body>

</html>
